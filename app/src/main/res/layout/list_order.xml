<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout_confirmcart"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ImageView
        android:id="@+id/btnBack_listOrder"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="start"
        android:src="@drawable/ic_baseline_navigate_before_24"
        android:text="Confirm Cart"
        android:textSize="20dp"></ImageView>

    <TextView
        android:id="@+id/listOrder_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnBack_listOrder"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:text="List Order"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_listOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/listOrder_info"
        android:layout_marginTop="15dp" />

</RelativeLayout>